{
  "name": "ノート風",
  "description": "手記・日記風のホラースタイル",
  "config": {
    "font_family": "Yomogi",
    "font_import": "https://fonts.googleapis.com/css2?family=Yomogi&display=swap",
    "background_color": "#FAFAFA",
    "text_color": "#2D2D2D",
    "font_size": 24,
    "line_height": 1.8,
    "line_pattern": "repeating-linear-gradient(transparent, transparent 31px, #E5E7EB 31px, #E5E7EB 32px)"
  },
  "handwriting_styles": {
    "normal": {"font_style": "normal", "letter_spacing": "0"},
    "shaky": {"font_style": "italic", "letter_spacing": "0.05em"},
    "rushed": {"font_size": "0.95em", "letter_spacing": "-0.02em"},
    "large": {"font_size": "1.3em", "font_weight": "bold"}
  },
  "page_conditions": {
    "normal": {},
    "stained": {"background_overlay": "radial-gradient(ellipse at 80% 20%, rgba(139,69,19,0.1) 0%, transparent 50%)"},
    "torn": {"clip_path": "polygon(0 0, 100% 0, 100% 95%, 95% 100%, 90% 96%, 85% 100%, 80% 97%, 75% 100%, 0 100%)"}
  },
  "colors": {
    "ink": "#2D2D2D",
    "ink_light": "#6B7280",
    "red": "#DC2626",
    "blue": "#3B82F6"
  }
}
