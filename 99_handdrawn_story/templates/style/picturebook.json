{
  "name": "絵本風",
  "description": "温かみのある絵本スタイル",
  "config": {
    "font_family": "Zen Maru Gothic",
    "font_import": "https://fonts.googleapis.com/css2?family=Zen+Maru+Gothic:wght@400;500;700&display=swap",
    "background_color": "#FFF8E7",
    "text_color": "#5D4037",
    "font_size": 26,
    "line_height": 2
  },
  "colors": {
    "blue": {"bg": "#E3F2FD", "border": "#64B5F6", "text": "#64B5F6"},
    "pink": {"bg": "#FCE4EC", "border": "#F48FB1", "text": "#C2185B"},
    "green": {"bg": "#E8F5E9", "border": "#81C784", "text": "#388E3C"},
    "orange": {"bg": "#FFF3E0", "border": "#FFB74D", "text": "#E65100"},
    "purple": {"bg": "#EDE7F6", "border": "#B39DDB", "text": "#7B1FA2"}
  },
  "backgrounds": {
    "day": "linear-gradient(180deg, #87CEEB 0%, #E0F7FA 100%)",
    "sunset": "linear-gradient(180deg, #FFCC80 0%, #FF8A65 50%, #E57373 100%)",
    "night": "linear-gradient(180deg, #1A237E 0%, #283593 50%, #3949AB 100%)",
    "forest": "linear-gradient(180deg, #C8E6C9 0%, #A5D6A7 50%, #81C784 100%)",
    "sea": "linear-gradient(180deg, #E3F2FD 0%, #BBDEFB 30%, #90CAF9 60%, #64B5F6 100%)"
  },
  "emphasis": {
    "marker_color": "#FFD54F"
  }
}
